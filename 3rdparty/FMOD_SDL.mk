FMODSDL_SRC= \
		./3rdparty/FMOD_SDL/FMOD_SDL.c

FMODSDL_OBJ=\
	$(patsubst ./3rdparty/FMOD_SDL/%.c,./build/${ARCH}/FMOD_SDL/%.c.o,${FMODSDL_SRC})

# libzip.h and zipconf.h and the flags are auto-generated by CMake
FMODSDL_CONFIG=
FMODSDL_FLAGS=$(CFLAGS)

build/${ARCH}/FMOD_SDL/%.c.o: 3rdparty/FMOD_SDL/%.c
	@mkdir -p $(@D)
	$(CC) $(FMODSDL_CONFIG) $(FMODSDL_FLAGS) -c $< -o $@
